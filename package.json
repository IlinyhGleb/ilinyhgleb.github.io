{
  "scripts": {
    "math": "node scripts/render-math.mjs",
    "math-dev": "node scripts/render-math.mjs --watch",
    "build": "npm run math && hugo --gc --minify --cleanDestinationDir",
    "dev": "concurrently \"node scripts/render-math.mjs --watch\" \"hugo server --disableFastRender --port=1333 --buildDrafts --buildFuture --noHTTPCache --cleanDestinationDir\""
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "mathjax-node": "^2.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
